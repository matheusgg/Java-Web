<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<!-- Configurações de internacionalização e Resource Bundle -->
	<application>
		<locale-config>
			<default-locale>pt_BR</default-locale>
		</locale-config>
		<resource-bundle>
			<base-name>br.com.maestroautomacoes.portal.bundle.messages</base-name>
			<var>msgs</var>
		</resource-bundle>
		<message-bundle>br.com.maestroautomacoes.portal.bundle.messages_pt_BR</message-bundle>
	</application>

	<!-- Classe para tratamento global de exceções -->
	<factory>
		<exception-handler-factory>br.com.maestroautomacoes.portal.exception.ExceptionFactory</exception-handler-factory>
	</factory>

</faces-config>
