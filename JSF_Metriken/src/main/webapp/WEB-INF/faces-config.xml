<?xml version="1.0" encoding="UTF-8"?>
<!-- This file is not required if you don't need any extra configuration. -->
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://java.sun.com/xml/ns/javaee
        http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

	<!-- Configuração de internacionalização -->
	<application>
		<locale-config>
			<default-locale>pt_BR</default-locale>
			<supported-locale>pt_BR</supported-locale>
			<supported-locale>en_US</supported-locale>
			<supported-locale>es_ES</supported-locale>
		</locale-config>
		<resource-bundle>
			<base-name>br.com.metriken.idioma.mensagens</base-name>
			<var>msgs</var>
		</resource-bundle>
		<message-bundle>br.com.metriken.idioma.mensagens</message-bundle>
	</application>

	<!-- Factories -->
	<factory>
		<exception-handler-factory>br.com.metriken.util.exception.ApplicationExceptionFactory</exception-handler-factory>
		<render-kit-factory>org.omnifaces.renderkit.Html5RenderKitFactory</render-kit-factory>
	</factory>
</faces-config>
