<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
	version="2.1">

	<!-- Registro do manipulador de exceções para a FacesServlet saber que esta 
		classe se encarregará de capturar e tratar as exceções que podem ser geradas. -->
	<factory>
		<exception-handler-factory>exceptions.ExceptionFactory</exception-handler-factory>
	</factory>
</faces-config>
